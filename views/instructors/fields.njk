<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url" 
      name="avatar_url" 
      placeholder="http://" 
      value="{{ instructor.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholder="Nome do Profissional" 
      value="{{ instructor.name }}"
    >
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input 
      type="date" 
      name="birth" 
      value="{{ instructor.birth }}"
    >
  </div>
</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <input 
      type="radio" 
      name="gender" 
      value="M" 
      {% if instructor.gender == 'M' %}
        cheked
      {% endif %}>
      Masculino
    </span>
    <span>
      <input 
      type="radio" 
      name="gender" 
      value="F" 
      {% if instructor.gender == 'F' %} 
        cheked
      {% endif %}>
      Feminino</span>
  </div>
</div>

<div class="item">
  <div>Área de Atuação</div>
  <div>
    <input 
      type="text" 
      name="services" 
      placeholder="Separe os serviços prestados com uma vírgula" 
      value="{{ instructor.services }}"
    >
  </div>
</div>

<button type="submit">Salvar</button>